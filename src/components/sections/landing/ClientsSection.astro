---
import { Image } from "astro:assets";
import craftBurger from "@images//clients/craft-burger.png";
import neighboursKitchen from "@images/clients/neighbours-kitchen.png";

// Define props from Astro
const { title, subTitle } = Astro.props;
// src\components\sections\landing\ClientsSection.astro
// src\images\clients\craft-burgers.png

// Define TypeScript interface for props
interface Props {
  title: string;
  subTitle: string;
}
---

<section
  class="w-full flex flex-col justify-center gap-4 px-3 py-8 bg-green-50"
>
  <!-- Title and description -->
  <div
    class="flex flex-col items-center gap-3 w-full text-center text-green-500"
  >
    <h2 class="text-4xl font-oswald">
      {title}
    </h2>
    <p class="text-pretty">{subTitle}</p>
  </div>
  <div class="flex flex-col items-center justify-center gap-5">
    <a href="https://www.facebook.com/CraftBurgerTrojmiasto/?locale=pl_PL">
      <Image
        src={craftBurger}
        alt={"https://www.facebook.com/CraftBurgerTrojmiasto/?locale=pl_PL"}
        class="object-cover object-center rounded-xl"
        draggable={"false"}
        loading={"lazy"}
        format={"png"}
      />
    </a>
    <a href="https://www.facebook.com/nhbkitchen/">
      <Image
        src={neighboursKitchen}
        alt={"https://www.facebook.com/nhbkitchen/"}
        class="object-cover object-center rounded-xl"
        draggable={"false"}
        loading={"lazy"}
        format={"png"}
      />
    </a>
  </div>
</section>
